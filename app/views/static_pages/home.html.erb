<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
       
       <%= link_to "フォロー( " + @following.count.to_s + " )",followings_user_path(current_user) %><br>
       <%= link_to "フォロワー( " + @follower.count.to_s + " )",followers_user_path(current_user) %><br>
       <span id="count">
       <%= link_to "Favorite( <span id='fav_count'>".html_safe + @favorite.count.to_s + "</span> )".html_safe,favorites_user_path(current_user),data: {remote: true} %><br>
       </span>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
      
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= page_entries_info @feed_items %>
      <%= render 'shared/feed' %>
    
  <%= paginate @feed_items %>
   
  </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Microposts</h1>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>