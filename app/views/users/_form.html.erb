  <%= form_for(@user) do |f| %>
  
   <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->
   
  <%= image_tag @user.avatar.url if @user.avatar %>
  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
  
   <%= f.label :name %>
   <%= f.text_field :name %>
   
   <%= f.label :email %>
   <%= f.text_field :email %>
 
   <%= f.label :password %>
   <%= f.password_field :password %>
   
   <%= f.label :password_confirmation, "Confirmation" %>
   <%= f.password_field :password_confirmation %>
   
   <%= f.label :description %>
   <%= f.text_area :description %>
   
   <%= f.label :location %>
   <%= f.text_field :location %>
   
   <% if params[:action] == 'new' or 'create' %>
    <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% elsif params[:action] == 'edit' %>
    <%= f.submit "Update my account", class: "btn btn-large btn-primary" %>
    <% else %>
     <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
   <% end %>
  <% end %>
